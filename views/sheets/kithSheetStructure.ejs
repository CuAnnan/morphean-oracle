            if(sheet.secondOathSworn)
            {
            %>
            <div class="row">
                <div class="col text-end">Unbruised</div>
                <div class="col"><i class="bx bx-square"></i></div>
            </div>
            <div class="row">
                <div class="col text-end">Unbruised</div>
                <div class="col"><i class="bx bx-square"></i></div>
            </div>
            <%
            }
        %>

            <div class="row">
                <div class="col text-end">Unbruised</div>
                <div class="col"><i class="bx bx-square"></i></div>
            </div>
        <% } %>
        <div class="row">
            <div class="col text-end">-1</div>
            <div class="col"><i class="bx bx-square"></i></div>
        </div>
